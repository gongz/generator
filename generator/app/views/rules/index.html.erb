<div class="page-header">
  <h1><%=t 'List of Rules'%></h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Roomno</th>
			<th>When</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @rules.each do |rule| %>
		<tr>
			<td><%= rule.name %></td>
			<td><%= rule.roomNo %></td>
			<td><%= rule.when %></td>
			<td> <%= link_to t('.show', :default => t("helpers.links.show")),
			rule, :class => 'btn btn-mini btn-success' %>
			<%= link_to t('.edit', :default => t("helpers.links.edit")),
			edit_rule_path(rule), :class => 'btn btn-mini' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			rule, method: :delete,
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-mini btn-danger' %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new'),
new_rule_path,
:class => 'btn btn-primary' %>